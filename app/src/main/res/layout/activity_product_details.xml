<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".product_details">


    <Button
        android:id="@+id/btnProdDesBuy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_background"
        android:layout_marginTop="700dp"
        android:layout_marginStart="190dp"
        android:textColor="#FFFFFF"
        android:text="@string/buy" />

    <ImageView
        android:id="@+id/productDetailsBg"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/product_details_stroke" />

    <ImageView
        android:id="@+id/ivProductPic"
        android:layout_width="320dp"
        android:layout_height="259dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        app:srcCompat="@drawable/hengde_faceshield2" />

    <TextView
        android:id="@+id/tvProdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="270dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/fulfilledTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fulfilled_by_med_c"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginStart="70dp"
        android:layout_marginTop="310dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvProdDesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/description"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvProdPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:layout_toEndOf="@+id/tvProdDesTxt"
        android:fontFamily="@font/open_sans_light"
        android:text="â‚±00.00"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvProdDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="375dp"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/description"
        android:textSize="11dp"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/heartImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="275dp"
        android:layout_marginStart="360dp"
        app:srcCompat="@drawable/ic_heart"
        android:contentDescription="@string/heart_image" />

    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="710dp"
        app:srcCompat="@drawable/plus_icon"
        android:clickable="true"
        android:contentDescription="@string/plus_button" />

    <ImageView
        android:id="@+id/ivMinus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="710dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/minus_icon"
        android:clickable="true"
        android:contentDescription="@string/minus_button" />

    <EditText
        android:id="@+id/etProdQuan"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="710dp"
        android:background="@drawable/quantity_text_stroke"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_horizontal|fill_vertical"
        android:importantForAutofill="no"
        android:inputType="number"
        android:text="1"
        android:textAlignment="gravity"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/productRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvProdName"
        android:layout_marginTop="275dp"
        android:layout_marginStart="20dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1" />

    <ImageView
        android:id="@+id/deliveryImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="305dp"
        android:layout_marginStart="30dp"
        app:srcCompat="@drawable/ic_delivery" />

</RelativeLayout>