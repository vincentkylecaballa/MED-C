<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medcTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="105dp"
                android:layout_marginTop="48dp"
                android:layout_toEndOf="@+id/navImage"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="@string/medc"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/navImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/navigationMenu"
                android:minHeight="?attr/actionBarSize"
                android:src="@drawable/ic_menu" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circlePhoto"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="55dp"
                android:layout_toEndOf="@id/medcTxt"
                android:src="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/medcTxt" />

            <ImageView
                android:id="@+id/micButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/circlePhoto"
                android:layout_alignStart="@id/searchBar"
                android:layout_marginStart="336dp"
                android:layout_marginEnd="16dp"
                android:layout_alignRight="@id/searchBar"
                android:contentDescription="@string/micButton"
                app:srcCompat="@drawable/ic_mic" />

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:layout_below="@+id/medcTxt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/white"
                android:drawableStart="@drawable/ic_search_black"
                android:ems="10"
                android:hint="@string/search"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                android:id="@+id/medImage"
                android:layout_width="377dp"
                android:layout_height="190dp"
                android:layout_below="@id/searchBar"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/medPhoto"
                android:elevation="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/homepage_image" />

            <TextView
                android:id="@+id/viewedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/medImage"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/most_viewed_products"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productsView"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:layout_below="@id/viewedTxt"
                android:layout_marginTop="24dp" />


        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>