<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="150dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="30dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/productsImg"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:src="@drawable/hengde_faceshield2"
            android:contentDescription="@string/face_shield" />

        <TextView
            android:id="@+id/descTxt"
            android:layout_width="217dp"
            android:layout_height="68dp"
            android:layout_below="@+id/faceshieldTxt"
            android:layout_toEndOf="@+id/productsImg"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:text="@string/comes_with_individual_box_packaging_plastic_film_for_the_acetate_is_included_to_prevent_scratches"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/faceshieldTxt"
            android:layout_width="187dp"
            android:layout_height="31dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/productsImg"
            android:fontFamily="@font/opensans_bold"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:text="@string/heng_de_face_shield"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/addtoCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/faceshieldTxt"
            app:srcCompat="@drawable/ic_baseline_add_shopping_cart"
            android:contentDescription="@string/addcart" />

        <Button
            android:id="@+id/buyBtn"
            android:layout_width="68dp"
            android:layout_height="26dp"
            android:layout_below="@id/descTxt"
            android:layout_marginStart="152dp"
            android:layout_marginLeft="170dp"
            android:layout_toEndOf="@id/productsImg"
            android:background="@drawable/button_background"
            android:text="@string/buy"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            tools:ignore="SmallSp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>